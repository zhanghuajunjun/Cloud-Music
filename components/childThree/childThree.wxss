.title {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.recommend {
  font-size: 38rpx;
  font-weight: 600;
}
.songlist {
  font-size: 28rpx;
  font-weight: 300;
  border: 1rpx solid #ccc;
  border-radius: 25rpx;
  padding: 6rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.scroll {
  display: flex;
  /* flex-direction: column; */
  justify-content: space-between;
  align-items: center;
  width: 630rpx;
}
.item {
  display: flex;
  align-items: center;
}
.item-img {
  height: 140rpx;
  width: 140rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.image {
  width: 46rpx;
  height: 46rpx;
}
.singer {
  font-size: 28rpx;
  color: #bbb;
  margin-top: 20rpx;
}
.scroll-view_H{
  display: flex;
}
.active {
  margin: 20rpx 0;
}
.mid {
  margin: 0 40rpx;
}
.left {
  padding-right: 80rpx;
}