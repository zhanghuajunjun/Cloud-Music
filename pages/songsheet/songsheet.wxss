/* pages/songsheet/songsheet.wxss */
.recom {
  padding: 20rpx;
}

.nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.all {
  font-size: 38rpx;
  font-weight: 600;
}

.filter {
  display: flex;
  font-size: 28rpx;
  font-weight: 300;
  border: 1rpx solid #ccc;
  border-radius: 25rpx;
  padding: 6rpx 10rpx;
  z-index: 99;
}

.icon {
  margin-right: 10rpx;
}

.banner-swiper {
  margin: 10rpx 0;
  width: 100%;
  overflow: hidden;
}

swiper {
  display: block;
  height: 460rpx;
  position: relative;
}

.slide-image {
  width: 300rpx;
  display: block;
  margin: 0 auto;
  height: 400rpx;
  margin-top: 25rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 5rpx 3rpx #eee;
  border-radius: 10rpx;
}

.active {
  margin-top: 0rpx;
  height: 450rpx;
}

.name-item {
  width: 260rpx;
  height: 73rpx;
  background: white;
  padding: 20rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  border-radius: 0 0 10rpx 10rpx;
}

.img {
  position: relative;
  width: 100%;
  border-radius: 10rpx 10rpx 0 0;
}

.paly2 {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

.paly1 {
  width: 25rpx;
  height: 25rpx;
  margin-right: 6rpx;
}

.palycount {
  font-size: 26rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.result {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  width: 100%
}

.result-item {
  width: 31%;
  height: 332rpx;
  margin-bottom: 30rpx;
}

.picUrl {
  width: 100%;
  height: 240rpx;
  border-radius: 10rpx;
  position: relative;
}

.itemName {
  font-size: 28rpx;
  padding: 10rpx;
  height: 73rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.active {
  margin-left: 3.5%;
  margin-right: 3.5%;
}

.allsong {
  width: 100%;
  padding: 10rpx 0;
  font-size: 28rpx;
  border-radius: 20rpx;
  background: #eee;
  text-align: center;
  margin: 20rpx 0;
}

.padddd {
  padding: 30rpx;
}

.zzc {
  display: flex;
  flex-wrap: wrap;
}

.catlist-item {
  background: #eee;
  padding: 10rpx 0;
  width: 159rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.marrr {
  margin-right: 18rpx;
}

.color {
  background: #999;
}
